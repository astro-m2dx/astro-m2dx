{
  "name": "@astro-m2dx/root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "packageManager": "pnpm@7.9.4",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "eslint-config-base": "workspace:*",
    "prettier": "latest",
    "turbo": "latest"
  }
}